<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <StackPane>
    <GridPane alignment="CENTER" hgap="10" vgap="10" BorderPane.alignment="CENTER">
        <Label text="Username" GridPane.rowIndex="1" />
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Password" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="3" GridPane.rowIndex="1" />

        <Label text="Confirm Password" GridPane.columnIndex="2" GridPane.rowIndex="2" />
        <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="3" GridPane.rowIndex="2" />

        <Label text="First Name" GridPane.rowIndex="4" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Last Name" GridPane.columnIndex="2" GridPane.rowIndex="4" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="3" GridPane.rowIndex="4" />

        <Label text="Date of Birth" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <TextField fx:id="dobField" GridPane.columnIndex="3" GridPane.rowIndex="5" />

        <Label text="Address Line 1" GridPane.rowIndex="6" />
        <TextField fx:id="address1Field" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Address Line 2" GridPane.columnIndex="2" GridPane.rowIndex="6" />
        <TextField fx:id="address2Field" GridPane.columnIndex="3" GridPane.rowIndex="6" />

        <Label text="Town" GridPane.rowIndex="7" />
        <TextField fx:id="addressTownField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

        <Label text="Postcode" GridPane.rowIndex="8" />
        <TextField fx:id="addressPostcodeField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

        <Button onAction="#submitButtonAction" text="Submit" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="9" />
        <Button onAction="#cancelButtonAction" text="Cancel" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="9" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
               <RowConstraints />
         </rowConstraints>
         <padding>
            <Insets left="20.0" top="30.0" />
         </padding>
    </GridPane>
        </StackPane>
    </center>
</BorderPane>
