<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Alert.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="gui.LoginController" alignment="CENTER"
      prefHeight="600.0" prefWidth="800.0">


        <GridPane alignment="CENTER" hgap="10" vgap="20">
            <Label text="Username" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="userName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Password" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        </GridPane>
        <HBox alignment="CENTER" spacing="10"><padding>
            <Insets top="20"/>
        </padding>
            <Button text="Log In" onAction="#loginButtonAction"/>
            <Button text="Create New User" onAction="#newUserButtonAction"/>
        </HBox>

</VBox>

